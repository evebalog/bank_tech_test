<h2><%= @bank_account.name %></h2>
<table border="1">
  <tr>
    <th>Created At</th>
    <th>Amount</th>
  </tr>
<% @bank_account.deposits.each do |deposit| %>
<tr>
  <td><%=deposit.created_at.strftime("%d/%m/%Y")%></td>
  <td><%=deposit.deposit_amount%></td>
</tr>
<%end%>
</table>
<table border="1">
  <tr>
    <th>Created At</th>
    <th>Amount</th>
  </tr>
<% @bank_account.withdrawals.each do |withdrawal| %>
<tr>
  <td><%=withdrawal.created_at.strftime("%d/%m/%Y")%></td>
  <td><%=withdrawal.withdrawal_amount%></td>
</tr>
<%end%>
</table>
